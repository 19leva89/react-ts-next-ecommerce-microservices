{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["api/**", "dist/**", ".next/**", "!.next/cache/**"],
      "env": 
				[
					"DATABASE_URL", 
					"MONGO_URL", 
					"CLERK_SECRET_KEY", 
					"STRIPE_SECRET_KEY", 
					"STRIPE_WEBHOOK_SECRET", 
					"KAFKA_BROKER", 
					"KAFKA_USERNAME", 
					"KAFKA_PASSWORD", 
					"KAFKA_USE_SSL",
					"OAUTH_EMAIL",
					"OAUTH_CLIENT_ID",
					"OAUTH_CLIENT_SECRET",
					"OAUTH_REFRESH_TOKEN"
				]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
