{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "env": 
				[
					"DATABASE_URL", 
					"MONGO_URL", 
					"CLERK_SECRET_KEY", 
					"STRIPE_SECRET_KEY", 
					"STRIPE_WEBHOOK_SECRET", 
					"KAFKA_BROKER", 
					"KAFKA_USERNAME", 
					"KAFKA_PASSWORD", 
					"KAFKA_USE_SSL"
				]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
		"db:push": {
			"cache": false
		},
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}
