{
  "name": "payment-service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"tsx src/index.ts --env-file=.env --watch src/index.ts\" \"tsx scripts/ngrok.ts --env-file=.env\"",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
    "ngrok": "tsx scripts/ngrok.ts --env-file=.env"
  },
  "dependencies": {
    "@hono/clerk-auth": "^3.0.3",
    "@hono/node-server": "^1.19.6",
    "@ngrok/ngrok": "^1.6.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "hono": "^4.10.7",
    "stripe": "^19.3.1"
  },
  "devDependencies": {
    "@repo/kafka": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
